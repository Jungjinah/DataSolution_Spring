<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="s1" class="com.ddargiratte.jan252.stock.Stock"></bean>
	
	<bean id="s2" class="com.ddargiratte.jan252.stock.Stock">
		<property name="name" value="삼성전자"></property>
		<property name="price" value="73000"></property>
	</bean>
	
	<bean id="ani" class="com.ddargiratte.jan252.animation.Animation">
		<property name="title" value="다다다"></property>			
		<property name="name" value="루다"></property>
		<property name="year" value="2000"></property>			<!-- property 버전 -->
	</bean>
	<bean id="s3" class="com.ddargiratte.jan252.stock.Stock">	<!-- constructor-age 버전 -->
		<constructor-arg value="카카오"></constructor-arg>
		<constructor-arg value="45000"></constructor-arg>
	</bean>
	<bean id="animation"
		class="com.ddargiratte.jan252.animation.Animation">
		<constructor-arg value="투니버스"></constructor-arg>
		<constructor-arg value="짱구는 못말려"></constructor-arg>
		<constructor-arg value="1998"></constructor-arg>
	</bean>
</beans>
